#!/bin/zsh
# Credits: https://github.com/thoughtbot/dotfiles/blob/master/bin/tat
# Attach or create a tmux session named the same as the current directory.

path_name="$(basename "$PWD" | tr . -)"
session_name=${1:-$path_name}

# Check if not in a tmux session
function not_in_tmux() {
  [[ -z "$TMUX" ]]
}

# Check if a session exists
function session_exists() {
  tmux has-session -t "$session_name" 2>/dev/null
}

# Create a detached tmux session if not already running
function create_detached_session() {
  TMUX='' tmux new-session -Ad -s "$session_name"
}

# Create session if needed and attach
function create_if_needed_and_attach() {
  if not_in_tmux; then
    tmux new-session -As "$session_name"
  else
    if ! session_exists; then
      create_detached_session
    fi
    tmux switch-client -t "$session_name"
  fi
}

# Run the function
create_if_needed_and_attach
